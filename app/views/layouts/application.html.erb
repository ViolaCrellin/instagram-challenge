<!DOCTYPE html>
<html>
  <head>
    <title>InstagramChallenge</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>

  <body>
    <%= yield %>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <p>
    <% if user_signed_in? %>
        <figure class="current_user_pic">
          <% if current_user.profile_pic.present? %>
            <%= image_tag(current_user.profile_pic.url(:thumb)) %>
          <% else %>
            <img src="http://i.imgur.com/qeCKQGP.jpg">
          <% end %>
      </figure>
      <%= link_to "I've Had Enough InstaGratification", destroy_user_session_path, method: :delete %>
    <% else %>
      <%= link_to "I Need MY InstaGratification", new_user_session_path %>
      <%= link_to "I Need InstaGratification", new_user_registration_path %>
      <%= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook) %>
    <% end %>
    </p>
  </body>
</html>
